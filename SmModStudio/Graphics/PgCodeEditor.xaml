<Page x:Class="SmModStudio.Graphics.PgCodeEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:edit="http://icsharpcode.net/sharpdevelop/avalonedit">
    <Page.CommandBindings>
        <CommandBinding Command="Save" Executed="Save"/>
        <CommandBinding Command="GoToPage" Executed="GoToLine"/>
        <CommandBinding Command="Find" Executed="FindReplace"/>
    </Page.CommandBindings>
    <Page.InputBindings>
        <KeyBinding Modifiers="Control" Key="G" Command="GoToPage"/>
    </Page.InputBindings>
    <DockPanel>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="Undo" ToolTip="Undo">
                    <Image Source="{StaticResource ResourceKey=ImgUndo}" Height="15"/>
                </Button>
                <Button Command="Redo" ToolTip="Redo">
                    <Image Source="{StaticResource ResourceKey=ImgRedo}" Height="15"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button Command="Save" ToolTip="Save">
                    <Image Source="{StaticResource ResourceKey=ImgSave}" Height="15"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <Button Command="Cut" ToolTip="Cut">
                    <Image Source="{StaticResource ResourceKey=ImgCut}" Height="15"/>
                </Button>
                <Button Command="Copy" ToolTip="Copy">
                    <Image Source="{StaticResource ResourceKey=ImgCopy}" Height="15"/>
                </Button>
                <Button Command="Paste" ToolTip="Paste">
                    <Image Source="{StaticResource ResourceKey=ImgPaste}" Height="15"/>
                </Button>
                <Button Command="Delete" ToolTip="Delete">
                    <Image Source="{StaticResource ResourceKey=ImgDelete}" Height="15"/>
                </Button>
            </ToolBar>
            <ToolBar>
                <ComboBox x:Name="SyntaxHighlightingBox" Width="100" SelectionChanged="UpdateSyntaxSelection"/>
            </ToolBar>
        </ToolBarTray>
        <edit:TextEditor x:Name="Editor" FontFamily="Consolas" FontSize="14" ShowLineNumbers="True">
        <edit:TextEditor.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Go To Line" InputGestureText="Ctrl+G" Command="GoToPage"/>
                <MenuItem Header="Find &amp; Replace" InputGestureText="Ctrl+F" Command="Find"/>
                <Separator/>
                <MenuItem Header="Undo" InputGestureText="Ctrl+Z" Command="Undo">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgUndo}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Redo" InputGestureText="Ctrl+Y" Command="Redo">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgRedo}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Cut" InputGestureText="Ctrl+X" Command="Cut">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgCut}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Copy" InputGestureText="Ctrl+C" Command="Copy">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgCopy}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Paste" InputGestureText="Ctrl+V" Command="Paste">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgPaste}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Delete" InputGestureText="Del" Command="Delete">
                    <MenuItem.Icon>
                        <Image Source="{StaticResource ResourceKey=ImgDelete}"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Select All" InputGestureText="Ctrl+A" Command="SelectAll"/>
            </ContextMenu>
        </edit:TextEditor.ContextMenu>
    </edit:TextEditor>
    </DockPanel>
</Page>