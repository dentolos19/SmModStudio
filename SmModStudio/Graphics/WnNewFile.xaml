<ui:AdonisWindow x:Class="SmModStudio.Graphics.WnNewFile"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                 Title="New File" Width="400" SizeToContent="Height" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="0,0,0,10">
        <StackPanel Margin="10,10,10,0">
            <TextBlock Text="File Name"/>
            <TextBox x:Name="FileNameBox"/>
        </StackPanel>
        <StackPanel Margin="10,10,10,0">
            <TextBlock Text="File Type"/>
            <ComboBox x:Name="FileTypeBox">
                <ComboBoxItem Content="Lua"/>
                <ComboBoxItem Content="Json"/>
            </ComboBox>
        </StackPanel>
        <Grid Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Cancel" Margin="0,0,5,0" Click="Cancel"/>
            <Button Grid.Column="1" Content="Create" Margin="5,0,0,0" Click="Create"/>
        </Grid>
    </StackPanel>
</ui:AdonisWindow>