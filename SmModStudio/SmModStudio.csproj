<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <UseWPF>true</UseWPF>
        <SignAssembly>true</SignAssembly>
        <AssemblyOriginatorKeyFile>Properties\AssemblyKey.snk</AssemblyOriginatorKeyFile>
        <PublicSign>true</PublicSign>
        <Company>Aprodots</Company>
        <Product>Scrap Mechanic Mod Studio</Product>
        <TargetFramework>netcoreapp5.0</TargetFramework>
        <IsPackable>false</IsPackable>
        <Authors>Dennise Catolos</Authors>
        <Title>Scrap Mechanic Mod Studio</Title>
        <Copyright>Copyright © 2020</Copyright>
        <ApplicationIcon>Resources/Assets/Icon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <Page Update="Graphics\WnMain.xaml">
        <Generator></Generator>
      </Page>
      <Page Update="Graphics\PgEditor.xaml">
        <Generator></Generator>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Graphics\WnMain.xaml.cs">
        <DependentUpon>WnMain.xaml</DependentUpon>
      </Compile>
      <Compile Update="Graphics\PgEditor.xaml.cs">
        <DependentUpon>PgEditor.xaml</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="AvalonEdit" Version="6.0.1" />
      <PackageReference Include="MahApps.Metro" Version="2.1.0" />
      <PackageReference Include="MaterialDesignThemes.MahApps" Version="0.1.4" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\Logo.png" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\SmModStudio.Core\SmModStudio.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\LuaSyntax.xml" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Resources\Assets\Logo.png" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\Syntax\Lua.xml" />
    </ItemGroup>

</Project>
