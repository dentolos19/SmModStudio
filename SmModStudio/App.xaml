<Application x:Class="SmModStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="InitializeApp" DispatcherUnhandledException="HandleError">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Assets.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Languages/en-US.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/Languages/zh-CN.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>